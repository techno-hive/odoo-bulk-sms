<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="technohive_sent_sms_tree" model="ir.ui.view">
            <field name="name">Sent SMS</field>
            <field name="model">technohive_sentsms</field>
            <field name="arch" type="xml">
                <tree string="TechnoHive Sent SMS">
                    <field name="message" />
                    <field name="response_code" />
                    <field name="response_description" />
                    <field name="mobile" />
                    <field name="message_id" />
                    <field name="network_id" />
                    <field name="create_uid" />
                    <field name="create_date" />
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="technohive_sent_sms_form">
            <field name="name">Tecnohive Sent SMS Form</field>
            <field name="model">technohive_sentsms</field>
            <field name="arch" type="xml">
                <form string="TechnoHive Sent sms">

                    <sheet>
                        <group>
                            <field name="message" />
                            <field name="response_code" />
                            <field name="response_description" />
                            <field name="mobile" />
                            <field name="message_id" />
                            <field name="network_id" />
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>